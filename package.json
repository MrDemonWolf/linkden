{
  "name": "linkden",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "db:generate": "pnpm --filter @linkden/db db:generate",
    "db:push": "pnpm --filter @linkden/db db:push",
    "db:studio": "pnpm --filter @linkden/db db:studio",
    "cf:deploy": "pnpm --filter @linkden/server run deploy && pnpm --filter @linkden/web run deploy",
    "cf:deploy:api": "pnpm --filter @linkden/server run deploy",
    "cf:deploy:web": "pnpm --filter @linkden/web run deploy",
    "cf:infra": "pnpm --filter @linkden/infra run deploy",
    "cf:destroy": "pnpm --filter @linkden/infra destroy",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test:e2e": "playwright test",
    "generate:social-brands": "pnpm add -D simple-icons -w && node scripts/generate-social-brands.mjs && pnpm remove simple-icons -w"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@playwright/test": "^1.52.0",
    "turbo": "^2.5.0",
    "typescript": "^5.8.0"
  },
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "workerd",
      "@swc/core",
      "sharp"
    ]
  }
}
