{
  "name": "@linkden/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=browser --conditions=workerd,worker,import --main-fields=module,main --external:cloudflare:* --external:node:*",
